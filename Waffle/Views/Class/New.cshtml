@model Waffle.ViewModels.ClassVM

@{
    //Layout = "~/Views/Shared/_UserLayout.cshtml";
    ViewBag.Title = "New Class";
}

<h5>Create a Class</h5>



@using (Html.BeginForm("New", "Class", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
    @Html.AntiForgeryToken()
    <p class="text-danger">
        @ViewBag.err
    </p>

    <section class="row">

        <article class="col-12">
            <div class="form-horizontal">

                <img src="" alt="Image Preview" id="imgpreview" width="700" height="600" class="img-fluid hidePreviewImg pb-3" 
                     style="display:none;"/>

                <div class="form-group col-md-11 input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="upload">Class Cover Art</span>
                    </div>
                    <div class="custom-file">
                        <input type="file" name="PosterUpload" class="custom-file-input" id="fileupload" aria-describedby="upload">
                        <label class="custom-file-label" for="fileupload">Choose file</label>
                    </div>
                </div>


                @{Html.RenderPartial("PartialEditAndNew", Model);}


                <div class="form-group col-md-11">
                    <div class="float-right">
                        <button type="submit" class="btn btn-primary">
                            Continue <span class="fa fa-arrow-right"></span>
                        </button>
                    </div>
                </div>

            </div>
        </article>

    </section>



                        }


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/App/script.js"></script>
}
