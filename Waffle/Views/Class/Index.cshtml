@model Waffle.ViewModels.ClassInfoVM

@{
    ViewBag.Title = Model._class.Title;
}

<section class="row pt-4">

    <article class="col-10">
        <h4 class="text-secondary">@Model._class.Title</h4>
    </article>

    <article class="col-2">

        @Html.ActionLink("Edit", "Edit","Class", new { id = Model._class.ClassId }, new { @class= "btn btn-outline-primary pull-right mb-1" })

    </article>

</section>


<div class="row pt-2 pl-0 pr-0">

    <section class="col-12 col-md-8 pt-2 pb-2">

        <article class="col-12">
            <img src="@Url.Content(Model._class.PosterSrc)" alt="@Model._class.Title" class="img-thumbnail" />
        </article>


        <article class="col-12">

            <nav class="pt-3">
                <div class="nav nav-tabs" id="nav-tab" role="tablist">
                    <a class="nav-item nav-link active" id="nav-basic-tab" data-toggle="tab" href="#basic" role="tab" aria-controls="basic" aria-selected="true">
                        <span class="fa fa-bookmark"></span>
                        About
                    </a>
                    <a class="nav-item nav-link" id="nav-resources-tab" data-toggle="tab" href="#resources" role="tab" aria-controls="resources" aria-selected="false">
                        <span class="fa fa-comment"></span>
                        
                        Resources
                    </a>
                    <a class="nav-item nav-link" id="nav-contact-tab" data-toggle="tab" href="#Insights" role="tab" aria-controls="Insights" aria-selected="false">
                        <span class="fa fa-file-archive-o"></span>
                        Insights
                    </a>
                    <a class="nav-item nav-link" id="nav-contact-tab" data-toggle="tab" href="#Insights" role="tab" aria-controls="Insights" aria-selected="false">
                        <span class="fa fa-pie-chart"></span>
                        Discussions
                    </a>
                </div>
            </nav>

            <div class="tab-content" id="nav-tabContent">

                <div class="tab-pane fade show active" id="basic" role="tabpanel" aria-labelledby="nav-basic-tab">
                    @{Html.RenderPartial("PartialClassBasic", Model._class);}
                </div>

                <div class="tab-pane fade" id="resources" role="tabpanel" aria-labelledby="nav-resources-tab">
                    @{Html.RenderPartial("PartialViewClassResources", Model.resources);}
                </div>

                <div class="tab-pane fade" id="Insights" role="tabpanel" aria-labelledby="nav-Insights-tab">
                    Incoming  Insights
                </div>
            </div>

        </article>
    </section>

    <section class="col-md-4 col-12">

        <article>
            @{ Html.RenderPartial("PartialClassPlaylist", Model.topics);}
        </article>

    </section>

</div>
